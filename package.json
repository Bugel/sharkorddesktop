{
  "name": "sharkord-desktop",
  "version": "0.0.1",
  "description": "Electron desktop app for Sharkord â€” voice, video, and text chat",
  "author": "Sharkord Desktop contributors",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && electron .",
    "start": "electron .",
    "lint": "eslint src --ext ts",
    "check-types": "tsc --noEmit",
    "pack": "npm run build && electron-builder",
    "pack:dir": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "~5.8.3"
  },
  "build": {
    "appId": "com.sharkord.desktop",
    "productName": "Sharkord",
    "directories": {
      "output": "out"
    },
    "files": ["dist/**", "static/**"],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "static/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
